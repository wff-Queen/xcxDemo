/**index.wxss**/

.slider {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}

.slider image {
    width: 100%;
    height: 300rpx;
}

.index-nav {
    width: 100%;
    background-color: #ffffff;
    justify-content: space-around;
}

.nav-item {
    padding: 20rpx 0;
    text-align: center;
    font-size: 12px;
    color: #616161;
}

.nav-item image {
    display: block;
    width: 80rpx;
    height: 80rpx;
    padding-bottom: 20rpx;
    margin: 0 auto;
}

.nav-item text {
    display: block;
}

.m-title-box {
    width: 100%;
    background-color: #ffffff;
    text-align: center;
    padding: 12px 0;
    color: #f47190;
    margin: 6rpx 0 0 0;
    font-size: 14px
}

.m-title::after,
.m-title::before {
    content: '';
    display: inline-block;
    width: 80rpx;
    height: 4rpx;
    background-color: #f47190;
    vertical-align: middle;
    border-radius: 10rpx
}

.list-box {
    justify-content: space-between;
    background-color: #ffffff;
    padding: 10rpx 0
}

.list {
    width: 33%;
    line-height: 1;
    margin-bottom: 20rpx;
}

.list image {
    width: 100%;
    height: 240rpx;
    font-size: 0;
    display: block;
}

.list-name {
    display: block;
    font-size: 12px;
    color: #616161;
    padding: 0 10rpx;
    line-height: 46rpx
}

.list-num {
    display: block;
    font-size: 14px;
    color: #f47190;
    text-align: center;
    padding: 10rpx 0
}